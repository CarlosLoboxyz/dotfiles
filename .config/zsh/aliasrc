# Aliases
alias ..='cd ..'
alias cp='cp -riv'
alias df='df -h'
alias mkdir='mkdir -vp'
alias mv='mv -iv'
alias sudo='doas '
alias sudoedit='doas $EDITOR'
alias vi='nvim'
alias -s {flac,mp3}='mpv --no-audio-display'
alias -s {jpg,png,webp,gif}='kitty +kitten icat'
alias -s pdf='evince'
alias la='ls --color=auto -AhlX --group-directories-first --hyperlink=always'
alias ls='ls --color=auto -AhX --group-directories-first --hyperlink=always'
alias grep='grep --color=auto'
alias ip='ip --color=auto'
alias tree='tree -C -I node_modules'
alias httpserver='python -m http.server 8000'
alias music='ncmpcpp'
alias less='less -rN'
alias duh='du -h --max-depth=1 | sort -h -r'
alias mail='neomutt'
# ZSH files
alias aliasrc='$EDITOR $ZDOTDIR/aliasrc'
alias zshrc='$EDITOR $ZDOTDIR/.zshrc'
alias zshenv='$EDITOR $HOME/.zshenv'
alias zprofile='$EDITOR $ZDOTDIR/.zprofile'
# Dotfiles
alias dotfiles='/usr/bin/git --git-dir=$XDG_CONFIG_HOME/dotfiles --work-tree=$HOME'
